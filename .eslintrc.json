{
    "extends": "standard",
    "env": {
        "browser": true,
        "mocha": true,
        "node": true
    },
    "globals": {
        "IconMapper": true,
        "MM": true,
        "Module": true,
        "moment": true,
        "Log": true,
        "version": true
    },
    "rules": {
        "indent": ["error", 4],
        "no-trailing-spaces": ["error", { "skipBlankLines": true }],
        "no-unused-vars": ["warn"],
        "padded-blocks": ["off"],
        "semi": ["error", "always"],
        "space-before-function-paren": ["error", {
            "anonymous": "never",
            "named": "never",
            "asyncArrow": "always"
        }],
        "standard/no-callback-literal": ["off"]
    }
}
